<Page
    x:Class="App.MyProcess.MyControl4"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App.MyProcess"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
     xmlns:data="using:App.Model"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Name="operation" Text="操作以及输入" Grid.Column="0" Grid.Row="0" FontSize="25" Margin="10,10,10,10"/>
        <TextBlock Name="name" Text="运行情况" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="0" FontSize="25" Margin="150,10,150,10"/>
        <StackPanel Grid.Column="0" Grid.Row="1" Grid.RowSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TextBlock Text="进程名称" Margin="10,10,10,10" FontSize="20"/>
            <TextBox Name="pname" Text="" Margin="10,10,10,10"/>
            <TextBlock Text="进程编号" Margin="10,10,10,10" FontSize="20"/>
            <TextBox Name="pid" Text="" Margin="10,10,10,10"/>
            <TextBlock Text="运行时间" Margin="10,10,10,10" FontSize="20"/>
            <TextBox Name="time" Text="" Margin="10,10,10,10"/>
            <Button Name="Myadd" Content="添加" Margin="10,10,10,10" FontSize="20" Click="Myadd_Click" />
            <Button Name="Myrun" Content="运行" Margin="10,10,10,10" FontSize="20" Click="Myrun_Click" />
        </StackPanel>
        <ListBox Name="textList" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3"></ListBox>
        <StackPanel Orientation="Vertical" Grid.Row="2" Grid.Column="1"> 
                <TextBlock Text="就绪队列"/>
            <ListView Name="list1" ItemsSource="{x:Bind PCBs1}" SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="data:PCB">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock >
                                <Run Text="进程名称: "/>
                                <Run Text="{x:Bind Pname}"/>
                            </TextBlock>
                            <TextBlock Margin="20,0,0,0">
                                <Run Text="进程编号: "/>
                                <Run Text="{x:Bind Pid}"/>
                            </TextBlock>
                            <TextBlock Margin="20,0,0,0">
                                 <Run Text="运行时间: "/>
                                <Run Text="{x:Bind Time}"/>
                            </TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="2" Grid.Column="2">
            <TextBlock Text="运行队列"/>
            <ListView Name="list2" ItemsSource="{x:Bind PCBs2}" SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="data:PCB">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock >
                                <Run Text="进程名称: "/>
                                <Run Text="{x:Bind Pname}"/>
                            </TextBlock>
                            <TextBlock Margin="20,0,0,0">
                                <Run Text="进程编号: "/>
                                <Run Text="{x:Bind Pid}"/>
                            </TextBlock>
                            <TextBlock Margin="20,0,0,0">
                                <Run Text="运行时间: "/>
                                <Run Text="{x:Bind Time}"/>
                            </TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="2" Grid.Column="3">
                <TextBlock Text="消亡队列"/>
            <ListView  Name="list3" ItemsSource="{x:Bind PCBs3}" SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="data:PCB">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock >
                                <Run Text="进程名称: "/>
                                <Run Text="{x:Bind Pname}"/>
                            </TextBlock>
                            <TextBlock Margin="20,0,0,0">
                                <Run Text="进程编号: "/>
                                <Run Text="{x:Bind Pid}"/>
                            </TextBlock>
                            <TextBlock Margin="20,0,0,0">
                                <Run Text="运行时间: "/>
                                <Run Text="{x:Bind Time}"/>
                            </TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            </StackPanel>
    </Grid>
</Page>
